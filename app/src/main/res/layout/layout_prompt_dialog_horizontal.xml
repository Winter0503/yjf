<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/shape_solid_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_hint_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="设置头像"
            android:textColor="@color/default_txt_title_color"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            style="@style/default_line"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_hint_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:text="是否删除该记录？"
        android:textColor="@color/default_txt_sub_color"
        android:textSize="14sp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        style="@style/default_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/dialog_hint_cancel"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/default_txt_main_color"
            android:textSize="16sp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            style="@style/default_line"/>

        <TextView
            android:id="@+id/dialog_hint_affirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/default_blue_color"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>